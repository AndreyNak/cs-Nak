              </tr>
            </tbody>
          </table>
        </div>
        <div class="footer">
          <div class="copy" data-action="click->modal#copy">
            <div class="me-2">
              <%= load_svg("copy.svg") %>
            </div>
            <span id="server-ip" class="title"><%= @server.ip %></span>
          </div>
          <%= link_to "steam://connect/#{@server.ip}", class: "connect", alt: "connect" do %>
          <div class="steam-logo"><%= load_svg("steam-logo.svg") %></div>
            <div>Join the server</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

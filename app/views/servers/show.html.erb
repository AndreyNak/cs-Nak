<div data-controller="modal">
  <div id="myModal" class="server-modal">
    <div id="cope-message" class="copy-message">
      <div><%= load_svg("blue-tick.svg") %></div>
      <div class="title">Server address copied</div>
    </div>
    <div class="window">
      <%= image_tag @server.map.image, class:  "bg-image" %>
      <div>
        <span class="close"><%= load_svg("close-modal.svg")%></span>
      </div>
      <div class="info">
        <div class="header">
          <div class="t-side">
            <span>CT</span>
            <div class="title">
              <%= load_svg("ct-side.svg") %>
            </div>
          </div>
          <div class="game-info">
            <h1><%= score_game(@server.win_round_ct, @server.win_round_t) %></h1>
            <div class="timer">
              <%= load_svg("timer.svg")%>
              <span>1:00</span>
            </div>
          </div>
          <div class="t-side">
            <div class="title">
              <%= image_tag "https://cloud.cybershoke.net/img/png/modals/server/t-side.svg" %>
            </div>
            <span>T</span>
          </div>
        </div>
        <div class="content">
          <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">9/9</th>
                <th scope="col">Player</th>
                <th scope="col">Rank</th>
                <th scope="col">Kills</th>
                <th scope="col">KD</th>
                <th scope="col">HS%</th>
                <th scope="col">FACEIT LVL</th>
                <th scope="col">In game</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">avatar</th>
                <td>Sasha</td>
                <td>rank</td>
                <td>54</td>
                <td>1.74</td>
                <td>54%</td>
                <td>10</td>
                <td>0:26:04</td>
              </tr>
              <tr>
                <th scope="row">avatar</th>
                <td>Andrey</td>
                <td>rank</td>
                <td>25</td>
                <td>0.76</td>
                <td>28%</td>
                <td>3</td>
                <td>0:26:04</td>
              </tr>
              <tr>
                <th scope="row">avatar</th>
                <td>Dima</td>
                <td>rank</td>
                <td>23</td>
                <td>0.57</td>
                <td>48%</td>
                <td>1</td>
                <td>0:26:04</td>
              </tr>
              <tr>
                <th scope="row">avatar</th>

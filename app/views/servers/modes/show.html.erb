          <div class="fs-5">
            <%= image_tag "https://cloud.cybershoke.net/img/copy.png" %>
          </div>
          <div class="fs-5">
            <%= link_to "steam://connect/46.174.54.179:27023", alt: "connect" do %>
              <%= image_tag "https://cloud.cybershoke.net/img/play-btn.png" %>
            <% end %>
          </div>
        </div>
      </div>

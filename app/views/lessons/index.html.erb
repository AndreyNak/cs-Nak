<div class="lessons">
  <div class="header">
    <h5>FIND THE ANSWER TO ANY QUESTION</h5>
    <h2>SUPPORT CENTER</h2>
    <%= form_tag  lessons_path, method: :get do %>
      <%= text_field_tag :search, params[:search], class: "search", placeholder: "Enter your question or keywordâ€¦"%>
    <% end%>
  </div>
  <div class="body">
    <div class="menu">
      <h4>SUPPORT SECTION</h4>
      <ul>
        <li class="category">
          <span class="title">Updates</span>
        </li>
        <li class="category">
          <span class="title">Popular questions</span>
        </li>
        <li class="category">
          <span class="title">Questions about the site</span>
        </li>
        <li class="category">
          <span class="title">Server questions</span>
        </li>
        <li class="category">
          <span class="title">Project rules</span>
        </li>
      </ul>
    </div>
    <div class="lessons">
      <% if @lessons.size.zero? %>
        <h4>ON REQUEST "<%= params[:search] %>" NOTHING FOUND</h4>
      <% else %>
        <% @lessons.each do |lesson| %>
          <div class="mt-5">
            <div class="mt-5 lesson-show">
              <div class="d-flex justify-content-between align-items-center">
                <h1 class="title"><%= lesson.title %></h1>
                <span class="date"><%= date_format(lesson.created_at) %></span>
              </div>
              <div class="content">
                <%= sanitize lesson.content %>
              </div>
            </div>
          </div>
        <%end%>
      <% end %>
    </div>
  </div>
</div>
